<main>
  <h1>{{cube.name}}</h1>
  <img class="cube" src="{{cube.imageUrl}}">
  <div class="details">
    <p><span>Description:</span>{{cube.description}}</p>
    <p><span>Difficulty level:</span> {{cube.difficultyLevel}}</p>
    {{#if message}}
    <span class="error">{{message.err}}</span>
    {{/if}}
    <a class="btn" href="/products">Back</a>
    {{#if isAuthorization}}
    <a class="btn" href="/products/{{cube._id}}/attach">Attach</a>
    <a class="btn" href="/products/edit/{{cube._id}}">Edit</a>
    <a class="btn" href="/products/delete/{{cube._id}}">Delete</a>
    {{/if}}
  </div>

  <h2>Accessories</h2>
  <div class="accessories">

    {{#each cube.accessories}}
    {{>accessory}}
    {{else}}
    <h3 class="italic">This cube has no accessories yet...</h3>
    {{/each}}

  </div>
</main>